{{!< default}}
<div class="flex flex-col lg:grid lg:grid-cols-4 lg:gap-4">
    <div class="flex flex-col justify-center lg:col-span-3">
        {{#foreach posts}}
            {{> "preview-blog" }}
        {{/foreach}}
    </div>
    <div class="lg:hidden">
        {{> "divider"}}
    </div>
    <div class="mx-auto mt-4 w-full lg:sticky lg:mt-0 h-fit lg:top-[5.25rem]">
        {{> "about" }}
        <div class="flex justify-between px-8 pt-3 mx-auto lg:px-4 max-w-96">
            {{> "socials"}}
        </div>
    </div>
    {{!-- If JS isn't enabled, fallback to standard pagination --}}
    <noscript>
        <div class="">
            {{pagination}}
        </div>
    </noscript>
</div>
