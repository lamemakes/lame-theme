{{!< default}}
<div class="flex flex-col lg:grid lg:grid-cols-4 lg:gap-4">
    <div class="flex flex-col justify-center lg:col-span-3 lg:pr-4 lg:border-r lg:border-secondary-color">
        {{#foreach posts}}
            {{> "preview-blog" }}
            <div class="mx-auto lg:hidden last:hidden divider--subtle"></div>
        {{/foreach}}
    </div>
    <div class="mx-auto md:hidden divider--bold"></div>
    <div class="mx-auto mt-4 w-full lg:sticky lg:mt-0 h-fit lg:top-[6.2rem]">
        {{> "about" }}
        <div class="flex justify-between px-8 pt-3 mx-auto lg:px-0 max-w-96">
            <a href="https://github.com/lamemakes" rel="noreferrer noopener" target="_blank" class="social-icon">{{> "icons/socials/github" svg_title="The lamemakes GitHub"}}</a>
            <a href="https://freak.social/@lamemakes" rel="me" target="_blank" class="social-icon">{{> "icons/socials/mastodon" svg_title="Follow on Mastodon"}}</a>
            <a href="mailto:wes@lamemakes.com" rel="noreferrer noopener" target="_blank" class="social-icon">{{> "icons/solid-envelope" svg_title="Send me an email"}}</a>
            <a href="https://instagram.com/lamemakes" rel="noreferrer noopener" target="_blank" class="social-icon">{{> "icons/socials/instagram" svg_title="Follow on Instagram"}}</a>
            <a href="/rss" target="_blank" class="social-icon">{{> "icons/solid-rss" svg_title="Subscribe to the RSS feed"}}</a>
        </div>
    </div>
    {{!-- If JS isn't enabled, fallback to standard pagination --}}
    <noscript>
        <div class="">
            {{pagination}}
        </div>
    </noscript>
</div>
