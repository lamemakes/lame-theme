{{!< default}}

{{#post}}

<article class="my-4 max-w-6xl rounded-xl lg:px-16 lg:py-6 bg-zinc-900/70 {{post_class}}">

    <header>
        <h1 class="mb-2 text-5xl font-extrabold text-center">{{title}}</h1>
        <p class="w-full text-center">
            <span>
                {{> "icons/solid-calendar" classname="size-5 inline mb-1"}}
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                <span class="bull">&bull;</span> 
                {{reading_time}}
            </span>
        </p>

        {{#if custom_excerpt}}
        <p class="">{{custom_excerpt}}</p>
        {{/if}}
    </header>

    <div class="my-4 mx-auto w-4/5 rounded-full divide-solid border-y-2 font-color/70"></div>

    <div>
        {{content}}
    </div>

</article>

<aside class="">
    <div class="gh-readmore-inner gh-container">
        <div class="">
            {{#next_post}}<a href="{{url}}">{{> "icons/arrow-left"}} <h4>{{title}}</h4></a>{{/next_post}}
        </div>
        <div class="">
            {{#prev_post}}<a href="{{url}}">
                <h4>{{title}}</h4> {{> "icons/arrow-right"}}
            </a>{{/prev_post}}
        </div>
    </div>
</aside>

{{/post}}
