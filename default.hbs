<body class="bg-mobile-clutter md:bg-desktop-clutter bg-cover bg-fixed font-sans">
    <header class="sticky flex top-0 bg-secondary-color min-h-16 z-10">
        <nav class="grid grid-cols-6 w-full max-w-6xl my-auto mx-auto text-3xl font-bold">
            <div id="logo" class="col-span-4 px-5 justify-self-left">
                <a class="" href="{{@site.url}}">
                    {{#if @site.logo}}
                        <img src="{{@site.logo}}" alt="{{@site.title}}" />
                    {{else}}
                        {{@site.title}}
                    {{/if}}
                </a>
                <a class="" role="button" aria-label="menu">
                    <div class="">
                        <div class=""></div>
                    </div>
                </a>
            </div>
            <div class="col-span-2 container flex">
                <div class="flex">
                    {{navigation}}
                </div>
                <div class="px-4">
                    <div class="flex">
                        {{search}}
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main id="content" class="max-w-4xl mx-auto">

        {{{body}}}
        {{!-- All content gets inserted here, index.hbs, post.hbs, etc --}}

    </main>
    <footer class="">
        <div class="max-w-5xl mx-auto text-center">
            <div class="">
                {{navigation type="secondary"}}
            </div>
            <div class="">
                Published with <a href="https://ghost.org" target="_blank" rel="noopener">Ghost</a>
            </div>
        </div>
    </footer>
    {{ghost_foot}}
    {{!-- Outputs important scripts - should always be included before closing body tag --}}
</body>
</html>
