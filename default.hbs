<body class="h-screen bg-mobile-clutter md:bg-desktop-clutter bg-cover bg-fixed font-sans">
    <header class="sticky top-0 flex justify-center min-h-16 bg-secondary-color text-heading-color z-10">
        <nav class="wrapper justify-between text-3xl font-bold">
            <div id="logo" class="my-auto">
                <a class="" href="{{@site.url}}">
                    {{#if @site.logo}}
                        <img src="{{@site.logo}}" alt="{{@site.title}}" />
                    {{else}}
                        {{@site.title}}
                    {{/if}}
                </a>
                <a class="" role="button" aria-label="menu">
                    <div class="">
                        <div class=""></div>
                    </div>
                </a>
            </div>
            <div class="flex">
                {{navigation}}
                <div class="pl-4 my-auto">
                    <button data-ghost-search>{{> "icons/search" classname="size-6"}}</button>
                </div>
            </div>
        </nav>
    </header>
    <main id="content" class="flex justify-center">
        <div class="wrapper">
            {{{body}}}
        </div>
    </main>
    <footer class="flex justify-center">
        <div class="text-center text-sm">
            {{navigation type="secondary"}}
        </div>
    </footer>
    {{ghost_foot}}
</body>
</html>
