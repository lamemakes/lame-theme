    <body class="font-sans h-full">
        <header class="flex sticky top-0 z-10 justify-center min-h-16 bg-secondary-color">
            {{navigation current_url=url }}
        </header>
        <div class="fixed w-screen h-screen backdrop-blur-sm z-[-1]"></div>
        <div class="flex flex-col">
            <main id="content" class="mx-8 py-4 max-w-6xl self-center">
                {{{body}}}
            </main>
            <footer class="flex justify-center w-full max-w-1/2">
                {{navigation type="secondary"}}
            </footer>
        </div>
        {{ghost_foot}}
    </body>
</html>
